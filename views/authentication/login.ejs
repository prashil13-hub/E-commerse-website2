  <div class="containers">

    <div class="form-container">

      <div class="signin-signup">

        <form action="/login" method="POST" class="sign-in-form validated-form" novalidate>
          <%- include("../partials/flash")  %>

          <h2 class="title">Sign in</h2>

          <div class="input-field">
            <i class="fas fa-user"></i>
            <input type="text" class="form-control" placeholder="Username" name="username" required >
            <div class="valid-feedback">
              Looks good!
            </div>
          </div>

          <div class="input-field">
            <i class="fas fa-user"></i>
            <input type="password" class="form-control" placeholder="Password" name="password" required>
            <div class="valid-feedback">
              Looks good!
            </div>
          </div>

          <!-- <input type="submit" value="Login" class="btn solid"> -->
          <button type="submit" class="btn solid">Login</button>

          <!-- <p class="social-text">Or Sign in with social platforms</p> -->
          <div class="social-media">
            <a href="/" class="social-icon">
              <i class="fas fa-home"></i>
            </a>
            <a href="/products" class="social-icon">
              <i class="fas fa-shopping-cart"></i>
            </a>
            <a href="/contactUs" class="social-icon">
              <i class="fas fa-hands-helping"></i>
            </a>
          </div>

        </form>

        <form action="/register" method="POST" class="sign-up-form" >

          <!-- <%# include("../partials/flash")  %> -->

          <h2 class="title">Sign up</h2>

          <div class="input-field">
            <i class="fas fa-user"></i>
            <input type="text" class="form-control validated-form" name="username" placeholder="Username" required>
            <div class="valid-feedback">
              Looks good!
            </div>
          </div>

          <div class="input-field">
            <i class="fas fa-envelope"></i>
            <input type="text" class="form-control validated-form"  name="email" placeholder="Email" required>
            <div class="valid-feedback">
              Looks good!
            </div>
          </div>

          <div class="input-field">
            <i class="fas fa-user"></i>
            <input type="password" class="form-control validated-form" name="password" placeholder="Password" required>
            <div class="valid-feedback">
              Looks good!
            </div>
          </div>

          <!-- <input type="submit" value="Sign up" class="btn solid"> -->
          <button type="submit" class="btn solid">Register</button>

          <!-- <p class="social-text">Or Sign up with social platforms</p> -->
          <div class="social-media">
            <div class="social-media">
              <a href="/" class="social-icon">
                <i class="fas fa-home"></i>
              </a>
              <a href="/products" class="social-icon">
                <i class="fas fa-shopping-cart"></i>
              </a>
              <a href="/contactUs" class="social-icon">
                <i class="fas fa-hands-helping"></i>
              </a>
            </div>
          </div>

        </form>
      </div>
    </div>

    <div class="panels-container">

