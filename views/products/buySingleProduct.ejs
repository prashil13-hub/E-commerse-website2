<%- include("../partials/header")  %>  
<%- include("../partials/navbar")  %>

    <link rel="stylesheet" href="/css/buyProduct.css">


    
    <div class="containers">
        
        <h6 class="display-6 mb-3 buyHeading"> <i class="fas fa-gifts"></i> My Orders</h6>

        <article class="orderSection">

            <div class="orderItems">
                
                <div class="card mb-4 orderItem" >
                    <div class="row g-0" style="height: 100%;">
                      <div class="col-md-4" >
                        <img style="width: 100%; height: 100%;object-fit: cover;" src="<%= product.img %> " alt="...">
                      </div>
                      <div class="col-md-8">
                        <div class="card-body" >
                          <h5 class="card-title" ><%= product.name %></h5>
                          <h6> &#x20B9; <%= product.price %> </h6>
                          <p class="card-text">This is a wider card with supporting text below as a natural lead-in text below as a natural.</p>
    
                          <!-- <form action="/user/<%# currentUser._id%>/cart/<%# item._id%>?_method=DELETE" method="post">
                            <button class="btn btn-sm btn-danger">remove</button>
                          </form> -->
                          
                        </div>
                      </div>
                    </div>
                </div>

                <hr style="margin: 30px 0 15px 0;">
                <h2 ><span>Total payment</span> :-</h2>
                <h5 ><%= product.name %> : &#x20B9; <%= product.price %></h5>
                <h5>Delivery : <span style="color: rgb(146, 202, 89);">Free</span></h5>
                <h5><span style="border-top: 1px solid black;">Amount to pay :- &#x20B9; <%= product.price %> </span></h5>
                


            </div>

            <div class="contactList">

                <!-- <h2>Contact List</h2> -->

                <form class="validated-form " action="/conformSingleOrder/<%= product._id %> " method="GET" style=" padding: 0px 15px 15px 15px;" novalidate>
                    <div class="mb-3">
                      <label for="name" class="form-label">Name</label>
                      <input type="text" class="form-control" id="name" placeholder="Enter Your Full Name" name="product[name]" required>
                      <div class="valid-feedback">
                        Looks good!
                      </div>
                    </div>
                    <div class="mb-3">
                      <label for="img" class="form-label">Phone Number</label>
                      <input type="text" class="form-control" id="img" placeholder="Phone Number" name="product[img]" required>
                      <div class="valid-feedback">
                        Looks good!
                      </div>
                    </div>
                    
                    <div class="mb-3">
                      <label for="categary" class="form-label">Address</label>
                      <input type="text" class="form-control" id="categary" placeholder="Enter Your Address" name="product[categary]" required>
                      <div class="valid-feedback">
                        Looks good!
                      </div>
                    </div>
            
                    <div class="mb-3">
                        <label for="price" class="form-label">Pincode</label>
                        <input type="number" class="form-control" id="price" placeholder="Enter Your pincode" name="product[price]" required>
                        <div class="valid-feedback">
                          Looks good!
                        </div>
                    </div>
            
                    <hr style="margin: 30px 0;">

